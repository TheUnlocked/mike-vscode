{
    "name": "mike-vscode",
    "displayName": "MiKe Language Support",
    "description": "Support for the MiKe language",
    "version": "0.0.1",
    "categories": [
        "Programming Languages"
    ],
    "engines": {
        "vscode": "^1.69.0"
    },
    "activationEvents": [],
	"main": "./client/out/extension",
    "contributes": {
        "languages": [
            {
                "id": "mike",
                "aliases": [
                    "MiKe",
                    "mike"
                ],
                "extensions": [
                    ".mike"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "mike",
                "scopeName": "source.mike",
                "path": "./syntaxes/mike.tmLanguage.json"
            }
        ],
        "configuration": {
			"type": "object",
			"title": "MiKe Language Server Configuration",
			"properties": {
				"mikeLanguageServer.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"mikeLanguageServer.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
    },
    "scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
    "devDependencies": {
        "@types/node": "^18.11.18",
        "@typescript-eslint/eslint-plugin": "^5.48.0",
        "@typescript-eslint/parser": "^5.48.0",
        "eslint": "^8.31.0",
        "typescript": "^4.9.4"
    }
}
